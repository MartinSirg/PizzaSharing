@page
@model RegisterModel
@{
ViewData["Title"] = @Resources.Account.Register.PageTitle;
}
<div class="register-box">
    <div class="register-logo">
        <span>Pizza Sharing</span>
        <hr/>
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">@Resources.Account.Register.RegisterTitle</p>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <span asp-validation-for="Input.Nickname" class="text-danger"></span>
                    <input asp-for="Input.Nickname" class="form-control" placeholder="@Resources.Account.Register.NicknamePlaceholder"/>
                </div>

                <div class="form-group mb-3">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="@Resources.Account.Register.FirstNamePlaceholder"/>
                </div>

                <div class="form-group mb-3">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    <input asp-for="Input.LastName" class="form-control" placeholder="@Resources.Account.Register.LastNamePlaceholder"/>
                </div>

                <span asp-validation-for="Input.Email" class="text-danger"></span>
                
                <div class="input-group mb-3">
                    <input type="email" asp-for="Input.Email" class="form-control" placeholder="@Resources.Account.Register.EmailPlaceholder">
                    <div class="input-group-append">
                        <span class="fa fa-envelope input-group-text"></span>
                    </div>
                </div>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
                
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="@Resources.Account.Register.PasswordPlaceholder" asp-for="Input.Password">
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                </div>

                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                
                <div class="input-group mb-3">
                    <input type="password" class="form-control" placeholder="@Resources.Account.Register.ConfirmPasswordPlaceholder" asp-for="Input.ConfirmPassword">
                    <div class="input-group-append">
                        <span class="fa fa-lock input-group-text"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">@Resources.Account.Register.RegisterButton</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <div class="text-center">
                <a asp-page="Login">@Resources.Account.Register.LoginLink</a>
            </div>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->

@section Scripts {
<partial name="_ValidationScriptsPartial"/>
}
