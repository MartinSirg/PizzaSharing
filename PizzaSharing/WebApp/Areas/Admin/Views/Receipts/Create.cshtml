@model WebApp.ViewModels.ReceiptViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Receipt</h4>
<hr/>

<div class="col-md-6">
    <div class="card card-success">
        @* Card Header *@
        <div class="card-header">
            <h3 class="card-title"><i class="fa fa-plus"></i></h3>
        </div>
        <form role="form" asp-action="Create">
            @* Card Body *@
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group form-check">
                        <input type="hidden" class="form-check-input" asp-for="Receipt.IsFinalized" value="false" />
                </div>
                <div class="form-group">
                    <label class="control-label">Creation Time</label>
                    <input type="text" class="form-control" value="@DateTime.Now.ToString("dd-MMMM-yyyy hh:mm tt")" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="Receipt.ReceiptManagerId" class="control-label">Manager Nickname</label>
                    <select asp-for="Receipt.ReceiptManagerId" class ="form-control" asp-items="Model.AppUsers"></select>
                </div>

            </div>
            @* Card Footer *@
            <div class="card-footer">
                <div class="form-group">
                    <input type="hidden" asp-for="Receipt.CreatedTime" value="@DateTime.Now.ToString("s")"/>
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>

<form >
    <button class="btn btn-default" asp-area="" asp-action="Index">
        <i class="fa fa-list"></i>
        Back to list
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
