@model Domain.Loan

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this Loan?</h4>
<hr/>

<div class="col-md-9">
    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title"><i class="fa fa-times"></i></h3>
        </div>
        @* Card Body *@
        <div class="card-body">
            <dt>
                Id
            </dt>
            <dd >
                @Html.DisplayFor(model => model.Id)
            </dd>
            @* Model specific fields(change col widths on copy/paste) *@
            <dt>
                Receipt Participant Id
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReceiptParticipant.Id)
            </dd>
            <dt>
                Loan Is Paid
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IsPaid)
            </dd>
            <dt>
                Loan Giver
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LoanGiver.UserNickname)
            </dd>
            <dt>
                Loan Taker
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LoanTaker.UserNickname)
            </dd>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
    <!-- /.card -->
</div>

<form >
    <button class="btn btn-default" asp-area="" asp-action="Index">
        <i class="fa fa-list"></i>
        Back to list
    </button>
</form>