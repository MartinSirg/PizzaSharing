@model WebApp.ViewModels.ProductInCategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product In Category</h4>
<hr />


<div class="col-md-6">
    <div class="card card-success">
        @* Card Header *@
        <div class="card-header">
            <h3 class="card-title"><i class="fa fa-plus"></i></h3>
        </div>
        <form role="form" asp-action="Create">
            @* Card Body (Change here)*@
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductInCategory.CategoryId" class="control-label">Category</label>
                    <select asp-for="ProductInCategory.CategoryId" class ="form-control" asp-items="Model.Categories"></select>
                </div>
                
                <div class="form-group">
                    <label asp-for="ProductInCategory.ProductId" class="control-label">Product Name</label>
                    <select asp-for="ProductInCategory.ProductId" class ="form-control" asp-items="Model.Products"></select>
                </div>

            </div>
            @* Card Footer *@
            <div class="card-footer">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>

<form >
    <button class="btn btn-default" asp-area="" asp-action="Index">
        <i class="fa fa-list"></i>
        Back to list
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
