@model WebApp.ViewModels.ProductInCategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product In Category</h4>
<hr />

<div class="col-md-6">
    <div class="card card-warning">
        
        @* Card Header *@
        <div class="card-header">
            <h3 class="card-title"><i class="fa fa-edit"></i></h3>
        </div>
        <form role="form" asp-action="Edit">

            @* Card Body *@
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductInCategory.Id" class="control-label">Id</label>
                    <input asp-for="ProductInCategory.Id" class="form-control" disabled/>
                </div>

                <div class="form-group">
                    <label asp-for="ProductInCategory.CategoryId" class="control-label">Category Name</label>
                    <select asp-for="ProductInCategory.CategoryId" class="form-control" asp-items="Model.Categories"></select>
                    <span asp-validation-for="ProductInCategory.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductInCategory.ProductId" class="control-label">Product Name</label>
                    <select asp-for="ProductInCategory.ProductId" class="form-control" asp-items="Model.Products"></select>
                    <span asp-validation-for="ProductInCategory.ProductId" class="text-danger"></span>
                </div>
            </div>

            @* Card Footer *@
            <div class="card-footer">
                <div class="form-group">
                    <input type="hidden" asp-for="ProductInCategory.Id"/>
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </div>
            
        </form>
    </div>
</div>

<form >
    <button class="btn btn-default" asp-area="" asp-action="Index">
        <i class="fa fa-list"></i>
        Back to list
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
