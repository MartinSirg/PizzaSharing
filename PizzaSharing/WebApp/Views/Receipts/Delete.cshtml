@model Domain.Receipt

@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>

<h4>Are you sure you want to delete this Receipt?</h4>
<hr/>

<div class="col-md-9">
    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title"><i class="fa fa-times"></i></h3>
        </div>
        @* Card Body *@
        <div class="card-body">
            <dt>
                Id
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
            @* Model specific fields *@
            <dt>
                Is Finalized
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IsFinalized)
            </dd>
            <dt>
                Time Created
            </dt>
            <dd>
                @Model.CreatedTime.ToString("dd-MMMM-yyyy hh:mm tt")
            </dd>
            <dt>
                Manager
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReceiptManager.UserNickname)
            </dd>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
    <!-- /.card -->
</div>

<form >
    <button class="btn btn-default" asp-area="" asp-action="Index">
        <i class="fa fa-list"></i>
        Back to list
    </button>
</form>
