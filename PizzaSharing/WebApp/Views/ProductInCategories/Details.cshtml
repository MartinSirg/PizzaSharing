@model Domain.ProductInCategory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>Product In Category</h4>
<hr />

<div class="col-md-9">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fa fa-info-circle"></i>
            </h3>
        </div>

        @* Card Body *@
        <div class="card-body">
            <dt>
                Id
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>
            @* Model specific fields(change col widths on copy/paste) *@
            <dt>
                Category Name
            </dt>
            <dd>
                @Html.Raw(($"{Model.Category.CategoryName}({Model.Category.Organization.OrganizationName})")) 
            </dd>
            <dt>
                Product Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Product.ProductName)
            </dd>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

<form>
    <div class="btn-group">
        <button class="btn btn-success border-right" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fa fa-edit"></i>
            Edit
        </button>
        <button class="btn btn-default border-left" asp-action="Index">
            <i class="fa fa-list"></i>
            Back to List
        </button>
    </div>
</form>
