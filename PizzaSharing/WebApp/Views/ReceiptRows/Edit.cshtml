@model WebApp.ViewModels.ReceiptRowViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ReceiptRow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReceiptRow.Amount" class="control-label"></label>
                <input asp-for="ReceiptRow.Amount" class="form-control" />
                <span asp-validation-for="ReceiptRow.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptRow.RowDiscount" class="control-label"></label>
                <input asp-for="ReceiptRow.RowDiscount" class="form-control" />
                <span asp-validation-for="ReceiptRow.RowDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptRow.ProductId" class="control-label"></label>
                <select asp-for="ReceiptRow.ProductId" class="form-control" asp-items="Model.Products"></select>
                <span asp-validation-for="ReceiptRow.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptRow.ReceiptId" class="control-label"></label>
                <select asp-for="ReceiptRow.ReceiptId" class="form-control" asp-items="Model.Receipts"></select>
                <span asp-validation-for="ReceiptRow.ReceiptId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ReceiptRow.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
