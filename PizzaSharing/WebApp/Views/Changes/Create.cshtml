@model WebApp.ViewModels.ChangeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Change</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Change.ChangeName" class="control-label">Name</label>
                <input asp-for="Change.ChangeName" class="form-control" />
