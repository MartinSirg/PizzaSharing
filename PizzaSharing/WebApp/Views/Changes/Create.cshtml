            <div class="form-group">
                <label asp-for="Change.CategoryId" class="control-label">Category</label>
                <select asp-for="Change.CategoryId" class ="form-control" asp-items="Model.Categories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

