@model WebApp.ViewModels.Category.CreateCategoryViewModel


@{
    ViewData["Title"] = "Add Category | " + Model.OrganizationName ;
}

<h1>Create</h1>

<h4>Category</h4>
<hr />

<div class="col-md-6">
    <div class="card card-success">
        @* Card Header *@
        <div class="card-header">
            <h3 class="card-title"><i class="fa fa-plus"></i></h3>
        </div>
        <form role="form" asp-action="Create" asp-controller="Category">
            @* Card Body *@
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

            </div>
            @* Card Footer *@
            <div class="card-footer">
                <div class="form-group">
                    <input type="hidden" asp-for="OrganizationId"/>
                    <input type="submit" value="Create" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>
</div>

<form >
    <button class="btn btn-default" asp-area="" asp-controller="Dashboard" asp-action="Organization" asp-route-id="@Model.OrganizationId">
        <i class="fa fa-list"></i>
        Back to list
    </button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}