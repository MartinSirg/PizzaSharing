@model WebApp.ViewModels.LoanRowViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LoanRow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LoanRow.IsPaid" /> @Html.DisplayNameFor(model => model.LoanRow.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LoanRow.LoanId" class="control-label"></label>
                <select asp-for="LoanRow.LoanId" class ="form-control" asp-items="Model.Loans"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoanRow.ReceiptRowId" class="control-label"></label>
                <select asp-for="LoanRow.ReceiptRowId" class ="form-control" asp-items="Model.ReceiptRows"></select>
            </div>
            <div class="form-group">
                <label asp-for="LoanRow.Involvement" class="control-label"></label>
                <input asp-for="LoanRow.Involvement" class="form-control" />
                <span asp-validation-for="LoanRow.Involvement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
